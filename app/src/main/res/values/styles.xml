<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="ChatNow" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!--Fullscreen theme-->
    <style name="ChatNow.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ChatNow.AppbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ChatNow.PopOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
